{
    "name": "dmromanov/csvtotextile",
    "description": "A tool for converting CSV-files into a Textile-formatted text tables.",
    "type": "project",
    "license": "GPL-3.0",
    "scripts": {
        "test": "phpunit",
        "build": "php -dphar.readonly=0 vendor/bin/phing build"
    },
    "require": {
        "php": ">= 8.4.0",
        "ext-mbstring": "*",
        "symfony/console": "^3.3"
    },
    "require-dev": {
        "symfony/framework-bundle": "^3.3",
        "pear/archive_tar": "^1.4",
        "phing/phing": "^2.17",
        "phpunit/phpunit": "^12.5"
    },
    "keywords": [
        "csv",
        "textile",
        "converter"
    ],
    "support": {
        "issues": "https://github.com/dmromanov/csvtotextile/issues",
        "source": "https://github.com/dmromanov/csvtotextile"
    },
    "bin": [
        "bin/csvtotextile"
    ],
    "autoload": {
        "psr-4": {
            "CsvToTextile\\": "src"
        }
    },
    "suggest": {
        "ext-phar": "For creating a PHAR-archive"
    },
    "autoload-dev": {
        "CsvToTextile\\Test\\TestCase\\": "tests/TestCase"
    },
    "authors": [
        {
            "name": "Dmitrii Romanov",
            "email": "dmromanov@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable"
}
